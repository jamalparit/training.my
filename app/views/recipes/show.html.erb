<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @recipe.title %>
</p>

<p>
  <strong>Image Url:</strong>
  <br>
  <%=image_tag @recipe.image_url,:width =>'300' %>
</p>

<p>
  <strong>Description:</strong>
  <%= @recipe.description %>
</p>

<p>
  <strong>Ingredients:</strong>
  <%= simple_format(@recipe.ingredients) %>
</p>

<p>
  <strong>Directions:</strong>
  <%= simple_format(@recipe.directions) %>
</p>

<p>
  <strong>Category:</strong>
  <%= link_to @recipe.category.title ,category_recipe_path(@recipe.category_id) unless @recipe.category.nil? %>
</p>

<p>
  <strong>State:</strong>
  <%= link_to@recipe.state.title ,state_recipe_path(@recipe.state_id) unless @recipe.state.nil? %>
</p>

<p>
  <strong>Published at</strong>
  <%= distance_of_time_in_words_to_now(@recipe.created_at) %> ago
  <%= @recipe.published %>
  <br>
  <strong>Created at</strong>
  <%=@recipe.created_at.strftime("%d %b %Y")%>
</p>

<h3>Comments (<%=@comments.size%>)</h3>
<%@comments.each do |comment|%>
Author: <%=comment.author%><br/>
Message : <%=comment.message%><br/>
<%end%><br/>
<%=form_tag((create_comment_recipe_path), :class => 'rform', :method => 'post') do%>
Author:<%=text_field :comment,:author%><br>
<br>
Message <br><%=text_area :comment,:message, :rows=>120, :cols=>140%><br>

<%=submit_tag 'Hantar'%>
<%end%>
<%#= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%#= link_to 'Back', recipes_path %>
