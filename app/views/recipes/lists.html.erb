<h1> Senarai Semua Recipes</h1>
<%@recipes.each do |recipe|%>
<div class="home-widget">
          <h6><%=recipe.title%></h6>
          <%=link_to image_tag(recipe.image_url,:width =>300),recipe_path(recipe) %>
          <%=truncate(recipe.description,:length =>20){link_to 'Read More',recipe_path(recipe)}%>
        </div>
        <%end%>